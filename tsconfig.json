{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "moduleResolution": "node",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "noErrorTruncation": true,
        "skipDefaultLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "emitDeclarationOnly": true,
        "importsNotUsedAsValues": "remove"
    },
    "references": [
        {
            "path": "./packages/elmish"
        },
        {
            "path": "./packages/elmish-preact"
        },
        {
            "path": "./packages/elmish-react"
        },
        {
            "path": "./packages/fetch"
        },
        {
            "path": "./packages/rest"
        },
        {
            "path": "./packages/usage"
        },
    ]
}
